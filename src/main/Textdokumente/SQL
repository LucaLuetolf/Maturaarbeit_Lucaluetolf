CREATE TABLE IF NOT EXISTS mitarbeiter (id INT NOT NULL AUTO_INCREMENT PRIMARY KEY, nachname VARCHAR(30), vorname VARCHAR(30), adresse VARCHAR(30), postleitzahl INT, ort VARCHAR(30), email VARCHAR(30), natelnummer INT, pin INT);
CREATE TABLE IF NOT EXISTS bestellung (id INT NOT NULL AUTO_INCREMENT PRIMARY KEY, artikel_id INT, anzahl INT);
CREATE TABLE IF NOT EXISTS bearbeiter (bestellung_id INT, mitarbeiter_id INT, kunden_id INT);

